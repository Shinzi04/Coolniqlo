<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header.ejs') %>
  <head>
    <link rel="stylesheet" href="../css/checkout.css" />
  </head>

  <body>
    <div class="checkout-all-container">
      <div class="checkout-container">
        <div class="checkout-item-container">
          <div class="checkout-item-title">Shopping Cart</div>
          <div class="checkout-table-container">
            <table class="checkout-item-table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Total Price</th>
                </tr>
              </thead>
              <tbody id="fetched-table" class="fetched-table"></tbody>
            </table>
          </div>

          <div class="checkout-item-bottompart">
            <div class="continue-shopping">
              <a href="/"> << Continue Shopping</a>
            </div>
            <div class="bottompart">
              <div class="checkout-subtotal">Total :</div>
              <div class="totalPrice" id="totalPrice"></div>
            </div>
          </div>
        </div>

        <div class="checkout-form">
          <div class="form-background">
            <div class="checkout-item-title">Payment Info</div>
            <div class="checkout-detail-container">
              <form id="checkout-form">
                <div class="form-group">
                  <label for="card-holder">Address</label>
                  <input type="text" id="" required />
                </div>
                <div class="form-group">
                  <label for="card-holder">Postal Code</label>
                  <input type="text" id="" required />
                </div>
                <button type="submit">Checkout</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('layouts/footer.ejs') %>
  </body>
  <script src="../script/shoppingCart.js"></script>
  <script>
    userID = '<%= userID %>';
  </script>
</html>
