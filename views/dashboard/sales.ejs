<!DOCTYPE html>
<html lang="en">
<%- include('../layouts/header.ejs') %>

<body>
  <%- include('../layouts/dashboard.ejs') %>
  <div class="dashboard-content">
    <nav>
      <h1 class="title">Sales</h1>
    </nav>
    <% if (products.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Sold</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr class="items">
          <td><a href="/detail/<%= product.id %>" target="_blank" class="linkProduct" style="color: blue;"><%= product.id %></a></td>
          <td><%= product.name %></td>
          <td>IDR<%= product.price %></td>
          <td><%= product.totalQuantity %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>No sales found.</p>
    <% } %>
  </div>

  <!-- pagination -->
  <div class="pagination">
    <% for(let i = 1; i <= totalPages; i++) { %>
    <a href="/admin/dashboard/sales?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
    <% } %>
  </div>

  <script>

  </script>

</body>


</html>